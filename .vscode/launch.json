{
    "configurations": [
        {
            "type": "java",
            "name": "Spring Boot-BrillServerApplication<brill_server>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "brill.server.BrillServerApplication",
            "projectName": "brill_server",
            "args": "--spring.profiles.active=local",  // <<<<< Profile
            "vmArgs": "-Xmx1G"  // Increased Heap size
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}